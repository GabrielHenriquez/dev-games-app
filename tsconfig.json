{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": [
        "common/components/*"
      ],
      "@config/*": [
        "common/config/*"
      ],
      "@styles/*": [
        "common/styles/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@stores/*": [
        "common/stores/*"
      ],
      "@services/*": [
        "common/services/*"
      ],
      "@hooks/*": [
        "common/hooks/*"
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}